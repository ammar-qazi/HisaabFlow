{
  "name": "hisaabflow",
  "version": "1.0.0",
  "description": "Desktop app for parsing bank statement CSVs",
  "author": "Ammar <ammar@example.com>",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/HisaabFlow.git"
  },
  "main": "public/electron.js",
  "private": true,
  "dependencies": {
    "ag-grid-community": "^30.0.0",
    "ag-grid-react": "^30.0.0",
    "axios": "^1.4.0",
    "concurrently": "^8.0.0",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-scripts": "5.0.1",
    "wait-on": "^7.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build",
    "dist": "npm run build && electron-builder",
    "dist:all": "npm run build && electron-builder --mac --win --linux",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.hisaabflow.app",
    "productName": "HisaabFlow",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*", 
      "public/electron.js",
      "scripts/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!venv/**/*",
          "!__pycache__/**/*",
          "!*.log",
          "!*.pyc"
        ]
      },
      {
        "from": "../configs",
        "to": "configs"
      }
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.finance",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Office",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    },
    "publish": {
      "provider": "github"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  }
}
